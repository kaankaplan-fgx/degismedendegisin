<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_margin="20dp"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/white"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/succes"
        tools:layout_editor_absoluteX="155dp"
        tools:layout_editor_absoluteY="108dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="BAŞARILI"
        android:textSize="30sp"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Randevunuz başarıyla oluşturuldu. Saat seçimi için en yakın zamanda aranacaksınız."
        android:textAlignment="center"/>

    <Button
        android:layout_margin="10dp"
        android:id="@+id/successokbtn"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:background="@drawable/btn_succes"
        android:text="TAMAM"
        android:textColor="@color/white"
        android:textStyle="bold"/>
</LinearLayout>